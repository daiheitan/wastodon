{
"update_url": "https://clients2.google.com/service/update2/crx",

    "manifest_version": 2,
    "name": "Wastodon",
    "version": "1.0.1",
    "description": "Reblog a weibo to Mastodon",
    "icons": {
        "48": "icons/border-48.png"
    },
    "content_scripts": [
        {
            "matches": [
                "*://*.weibo.com/*"
            ],
            "js": [
                "browser-polyfill.min.js",
                "wastodon.js"
            ],
            "css": [
                "wastodon.css"
            ]
        }
    ],
    "applications": {
        "gecko": {
            "id": "Wastodon@zimond.me",
            "strict_min_version": "47.0"
        }
    },
    "background": {
        "scripts": [
            "browser-polyfill.min.js",
            "background.js"
        ]
    },
    "permissions": [
        "<all_urls>",
        "identity",
        "storage"
    ]
}